{
    "description": "Packer basebox for 4640",
    "variables": {
        "admin_user": "admin",
        "admin_passwd": "P@ssw0rd",
        "pub_key_file": "./files/http/acit_admin_id_rsa.pub",
        "iso_url": "./isos/CentOS-7-x86_64-Minimal-1908.iso",
        "iso_checksum_url": "./isos/shasum.txt",
        "iso_checksum_type": "sha256",
        "http_directory": "./files/http",
        "shutdown_command": "sudo poweroff "
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "output_directory": "./output",
            "vm_name": "4640_BASE",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "http_directory": "{{ user `http_directory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_username": "{{ user `admin_user` }}",
            "ssh_password": "{{ user `admin_passwd` }}",
            "ssh_timeout": "20m",
            "ssh_pty": "true",
            "boot_command": [
                "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ],
            "format": "ova",
            "guest_os_type": "RedHat_64",
            "guest_additions_mode": "disable",
            "hard_drive_interface": "sata",
            "hard_drive_nonrotational": true,
            "hard_drive_discard": true,
            "memory": "1536",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--nictype1",
                    "virtio"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo yum -y install epel-release",
                "sudo yum -y update",
                "sudo sed -r -i 's/SELINUX=(enforcing|disabled)/SELINUX=permissive/' /etc/selinux/config"
            ]
        },
        {
            "type": "file",
            "source": "setup",
            "destination": "/home/{{ user `admin_user` }}"
        },
        {
            "type": "file",
            "source": ".ssh",
            "destination": "/home/{{ user `admin_user` }}"
        },
        {
            "type": "shell",
            "inline": [
                "chmod -R 600 /home/{{ user `admin_user`}}/.ssh/acit_admin_id_rsa",
                "chmod -R 744 /home/{{ user `admin_user`}}/.ssh/acit_admin_id_rsa.pub",
                "chown -R {{ user `admin_user`}}:{{ user `admin_user`}} /home/{{ user `admin_user`}}"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "base_4640.box"
        }
	]
}